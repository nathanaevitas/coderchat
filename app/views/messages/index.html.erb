<h4 class="header center teal-text text-lighten-2">Message List</h4>
<% if @messages %>
<%= @messages.each do |message| %>
<div class = 'row'>
<div class = 'col s12'>
  <div class='card blue-grey darken-1'>    
        <div class=card-content white-text>
          <span class = 'card-title'>Sender: <%= message.sender.name %></span><br>
          <span class = 'card-title'>Recipient: <%= message.recipient.name %></span>
          <p>Sent At:<%= message.created_at.strftime("%A, %B %d, %H:%M") %></p>
          <p><%= message.body %></p>
        </div>       
  </div>
  </div>
</div>
  
  <% end %>
  <% end %>  


